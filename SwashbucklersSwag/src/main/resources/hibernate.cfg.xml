<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        " http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- todo should be changed to "update" later in development -->
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <property name = "hibernate.dialect">
            org.hibernate.dialect.PostgreSQL9Dialect
        </property>

        <property name = "hibernate.connection.driver_class">
            org.postgresql.Driver
        </property>

        <property name="show_sql">true</property>

        <!-- todo should be changed to real (not in memory) database connection information later in development -->
        <property name = "hibernate.connection.url">
            <!-- h2 in memory database -->
            jdbc:h2:mem:tcp://localhost/~/test;MODE=PostgreSQL
        </property>

        <property name = "hibernate.connection.username">
            sa
        </property>

        <property name = "hibernate.connection.password">
        </property>

        <mapping class = "factor.re.model.Reimbursement"/>
        <mapping class = "factor.re.model.User"/>

    </session-factory>
</hibernate-configuration>